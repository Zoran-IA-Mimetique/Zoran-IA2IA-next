{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fragment",
  "type": "object",
  "required": [
    "id",
    "text",
    "layer",
    "entropy",
    "ttl",
    "hash",
    "timestamp"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "text": {
      "type": "string"
    },
    "layer": {
      "type": "string",
      "enum": [
        "short",
        "long",
        "latent",
        "parasitic"
      ]
    },
    "entropy": {
      "type": "number",
      "minimum": 0
    },
    "ttl": {
      "type": "string",
      "format": "date-time"
    },
    "zgs": {
      "type": "string"
    },
    "hash": {
      "type": "string"
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "meta": {
      "type": "object"
    }
  }
}
